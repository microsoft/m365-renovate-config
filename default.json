{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "description": ["Recommended config which is intended to be appropriate for most projects."],

  "extends": [
    "config:base",
    "github>microsoft/m365-renovate-config:groupReact#v2.0.1",
    "github>microsoft/m365-renovate-config:newConfigWarningIssue#v2.0.1",
    "github>microsoft/m365-renovate-config:dependencyDashboardMajor#v2.0.1"
  ],

  "prConcurrentLimit": 10,
  "prHourlyLimit": 2,

  "printConfig": true,

  "timezone": "America/Los_Angeles",

  "vulnerabilityAlerts": {
    "enabled": true
  },

  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "commitMessageTopic": "devDependency {{{depName}}}"
    },
    {
      "matchDepTypes": ["dependencies"],
      "rangeStrategy": "replace"
    }
  ]
}
