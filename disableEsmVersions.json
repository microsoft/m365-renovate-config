{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Disable upgrades to package versions that have been converted to ES modules.",
  "packageRules": [
    { "matchPackageNames": ["chalk"], "allowedVersions": "<5.0.0" },
    { "matchPackageNames": ["execa", "find-up"], "allowedVersions": "<6.0.0" },
    { "matchPackageNames": ["globby"], "allowedVersions": "<12.0.0" },
    { "matchPackageNames": ["p-limit"], "allowedVersions": "<4.0.0" }
  ]
}
