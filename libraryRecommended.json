{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "description": "Recommended config for a JS library repo or monorepo, including pinning `devDependencies`.",

  "extends": [
    "github>microsoft/m365-renovate-config#v1.7.3",
    "github>microsoft/m365-renovate-config:dependencyDashboardMajor#v1.7.3"
  ],

  "rangeStrategy": "replace",

  "pin": {
    "group": {
      "commitMessageTopic": "devDependencies"
    }
  },

  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "commitMessageTopic": "devDependency {{{depName}}}",
      "rangeStrategy": "pin"
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "rangeStrategy": "widen"
    }
  ]
}
